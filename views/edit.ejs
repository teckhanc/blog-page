<%- include("partials/header") -%>

<h1>Edit</h1>

<form class="" action="/edit/<%=postId%>" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" value="<%=title %>" id="postTitle">
  </div>
  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea class="form-control" name="postContent" value="" id="postContent" rows="7"><%=content%></textarea>
  </div>
  <div class="form-group">
    <button type="Submit" name="button" class="btn btn-primary">Re-publish</button>
  </div>
</form>

<%- include("partials/footer") -%>
